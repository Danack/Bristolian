{
  "compilerOptions": {
    "jsx": "react",
    "jsxFactory": "h",
    "module": "ES6",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "noImplicitAny": true,
    "outDir": "./build/",
    "preserveConstEnums": true,
    "removeComments": true,
    "sourceMap": true,
    "target": "ES6"
  },
  "include": [
    "./public/tsx/**/**/*.tsx",
    "./public/tsx/**/**/*.ts"
  ],
  "exclude": [
    "./public/tsx/**/*.test.tsx"
  ]
}